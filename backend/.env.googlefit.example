# Google Fit Integration - Environment Variables
# Add these to your .env file

# ===========================================
# GOOGLE FIT OAUTH (Required for Google Fit)
# ===========================================

# Use the same Google OAuth credentials as your existing Google Sign-In
# But ensure these scopes are enabled in Google Cloud Console:
# - https://www.googleapis.com/auth/fitness.sleep.read
# - https://www.googleapis.com/auth/fitness.activity.read  
# - https://www.googleapis.com/auth/fitness.heart_rate.read

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Callback URL for Google Fit OAuth (must be registered in Google Cloud Console)
GOOGLE_FIT_REDIRECT_URI=http://localhost:8000/api/v1/health/google-fit/callback

# Frontend URL (for OAuth callback redirects)
FRONTEND_URL=http://localhost:3000

# ===========================================
# SECURITY (Required)
# ===========================================

# 32-character encryption key for securing OAuth tokens at rest
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex').slice(0,32))"
TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key!

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Disable health sync cron jobs (useful for development)
ENABLE_HEALTH_CRON=true


# ===========================================
# GOOGLE CLOUD CONSOLE SETUP STEPS
# ===========================================
#
# 1. Go to Google Cloud Console (https://console.cloud.google.com)
# 2. Select your existing project (used for Google Sign-In)
# 3. Go to "APIs & Services" > "Library"
# 4. Search for "Fitness API" and enable it
# 5. Go to "APIs & Services" > "OAuth consent screen"
# 6. Add the following scopes:
#    - .../auth/fitness.sleep.read
#    - .../auth/fitness.activity.read
#    - .../auth/fitness.heart_rate.read (optional)
# 7. Go to "APIs & Services" > "Credentials"
# 8. Edit your OAuth 2.0 Client ID
# 9. Add the redirect URI: http://localhost:8000/api/v1/health/google-fit/callback
# 10. For production, add: https://yourdomain.com/api/v1/health/google-fit/callback
#
# ===========================================
