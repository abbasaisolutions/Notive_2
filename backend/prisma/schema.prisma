// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

enum Category {
  PERSONAL
  PROFESSIONAL
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?  // Optional for SSO users
  name          String?
  avatarUrl     String?
  role          Role     @default(USER)
  isBanned      Boolean  @default(false)
  googleId      String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Password Reset
  resetToken       String?
  resetTokenExpiry DateTime?

  // Refresh tokens for this user
  refreshTokens RefreshToken[]
  
  // Profile
  profile       UserProfile?
  
  // Journal entries
  entries       Entry[]
  
  // Chapters
  chapters      Chapter[]
  
  // Social Connections
  socialConnections SocialConnection[]
  
  // Google Fit Integration
  googleFitConnection GoogleFitConnection?
  healthContexts      HealthContext[]
  healthInsights      HealthInsight[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Entry {
  id          String   @id @default(cuid())
  title       String?
  content     String   @db.Text
  contentHtml String?  @db.Text
  coverImage  String?
  audioUrl    String?
  mood        String?
  tags        String[]
  category    Category @default(PERSONAL)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapterId   String?
  chapter     Chapter? @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  shareLinks  ShareLink[]
  
  // Phase 2: Insights & Sharing
  lessons     String[]
  skills      String[]
  reflection  String?  @db.Text
  isShared    Boolean  @default(false)
  sharedToken String?  @unique
  
  // Phase 3: Social & Extensions
  source      EntrySource @default(NOTIVE)
  externalId  String?     
  sourceLink  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
}

enum EntrySource {
  NOTIVE
  FACEBOOK
  INSTAGRAM
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio         String?   @db.Text
  location    String?
  occupation  String?
  website     String?
  birthDate   DateTime?
  lifeGoals   String[]
  updatedAt   DateTime  @updatedAt
}

model Chapter {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#6366f1") // Primary purple
  icon        String?  @default("ðŸ“–")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries     Entry[]
  shareLinks  ShareLink[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ShareLink {
  id        String    @id @default(cuid())
  token     String    @unique @default(cuid())
  entryId   String?
  entry     Entry?    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  chapterId String?
  chapter   Chapter?  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
}

model SocialConnection {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider     String   // 'INSTAGRAM', 'FACEBOOK'
  providerId   String?  // Social ID
  accessToken  String   @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, provider])
}

// Google Fit Connection - Separate from main Google Auth
model GoogleFitConnection {
  id           String    @id @default(cuid())
  userId       String    @unique
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken  String    @db.Text
  refreshToken String    @db.Text
  expiresAt    DateTime
  scopes       String[]  // Granted scopes for audit
  connectedAt  DateTime  @default(now())
  lastSyncAt   DateTime?
  updatedAt    DateTime  @updatedAt
}

// Daily Health Context - Aggregated health data per day
model HealthContext {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date          DateTime @db.Date
  
  // Sleep data
  sleepMinutes  Int?     // Total sleep duration in minutes
  sleepQuality  String?  // 'poor', 'fair', 'good', 'excellent' (derived from sleep stages)
  
  // Activity data
  steps         Int?
  activeMinutes Int?     // Minutes of moderate/vigorous activity
  caloriesBurned Int?
  
  // Heart rate (optional)
  avgHeartRate  Int?
  restingHeartRate Int?
  
  // Metadata
  syncedAt      DateTime @default(now())
  source        String   @default("GOOGLE_FIT")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId, date])
}

// Health Insights - AI-generated correlations
model HealthInsight {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // 'sleep_mood', 'activity_mood', 'pattern', 'weekly_summary'
  title       String
  description String   @db.Text
  data        Json?    // Additional structured data (charts, stats)
  period      String   // 'day', 'week', 'month'
  generatedAt DateTime @default(now())
  
  @@index([userId, type])
}
